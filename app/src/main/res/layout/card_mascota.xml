<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/border_card"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:src="@drawable/perro1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="-1dp"
            android:padding="4dp">

            <ImageView
                android:id="@+id/imgHuesoBlanco"
                android:layout_width="40dp"
                android:background="@android:color/white"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/hueso_blanco" />

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/txtVotos"
                android:layout_toEndOf="@+id/imgHuesoBlanco"
                android:gravity="center_vertical"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtVotos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/imgHuesoAmarillo"
                android:gravity="center"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/imgHuesoAmarillo"
                android:layout_width="40dp"
                android:background="@android:color/white"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/hueso_amarillo" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>